{
  "manifest_version": 3,
  "name": "ProCon Policy Analyzer",
  "version": "1.0",
  "description": "Right-click to analyze privacy agreements using AI.",
  "permissions": [
    "contextMenus",
    "scripting",
    "activeTab",
    "storage",
    "identity",
    "tabs"
  ],
  "oauth2": {
    "client_id": "firebase-adminsdk-fbsvc@procon-extension.iam.gserviceaccount.com",
    "scopes": ["email", "profile"]
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "ProCon Privacy Analyzer",
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "summary.html",
        "summary.js",
        "style.css",
        "history.html",
        "history.js",
        "jspdf.umd.min.js",
        "lib/config.js",
        "lib/firebase-app.js",
        "lib/firebase-auth.js",
        "login.html",
        "login.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' https://www.gstatic.com/firebasejs/; object-src 'self';"
  }
}
